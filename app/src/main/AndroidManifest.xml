<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e_shop">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EShop">
        <activity android:name=".activitiesUI.activities.DashboardActivity"></activity>
        <activity
            android:name=".activitiesUI.MyDashboardActivity"
            android:label="@string/title_activity_my_dashboard"></activity>
        <activity
            android:name=".activitiesUI.MyDashBoard"
            android:label="@string/title_activity_my_dash_board"></activity>
        <activity
            android:name=".activitiesUI.DashBoardActivity"
            android:label="@string/title_activity_dash_board"></activity>
        <activity
            android:name=".activitiesUI.activities.UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activitiesUI.activities.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activitiesUI.activities.BaseActivity" />
        <activity
            android:name=".activitiesUI.activities.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activitiesUI.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activitiesUI.activities.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitiesUI.activities.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>